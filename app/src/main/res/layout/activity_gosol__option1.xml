<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textbg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".GosolActivity_Option1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:background="@color/backgroudwater"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gosol_textView_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textColor="@color/white_text"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/oju_details_1_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textColor="@color/white_text"
                android:textSize="28sp" />


            <TextView
                android:id="@+id/oju_details_2_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textColor="@color/white_text"
                android:textSize="28sp" />


            <TextView
                android:id="@+id/oju_details_3_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textColor="@color/white_text"
                android:textSize="28sp" />


            <TextView
                android:id="@+id/oju_details_4_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textColor="@color/white_text"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/option1_textView5_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="28sp" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>