        android:id="@+id/option3_Button_5_id"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:background="@drawable/button"
        android:text="এশার নামাজের নিয়ত"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/option3_Button_6_id"
        android:layout_width="280dp"
        android:layout_height="90dp"
        android:background="@drawable/button"
        android:text="নফল ও বেতর নামাজের নিয়ত"
        android:textSize="20sp"
